<!DOCTYPE html>
<html lang='pt_BR'>
<head>
  <%= erb :'partials/google_analytics' if Sinatra::Base.environment == :production %>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <meta property="og:type" content="website" />
  <meta property="og:title" content="iSaveU">
  <meta property="og:description" content="iSaveU">
  <meta property="og:url" content="http://isaveu.com.br">
  <meta property="og:image" content="http://isaveu.com.br/img/iSaveU_OG.png">
  <meta property="og:image:type" content="image/png">
  <meta property="og:image:width" content="400">
  <meta property="og:image:height" content="400">
  <meta property="og:image:alt" content="iSaveU">

  <title>iSaveU</title>

  <link rel="preload" href="http://cdnjs.cloudflare.com/ajax/libs/waypoints/2.0.3/waypoints.min.js" as="script">

  <%= yield_content :css %>

  <link href="/css/style.min.css" rel="stylesheet">
  <link href="/css/default.css" rel="stylesheet">

  <link href="/img/favicon.png" rel="shortcut icon">

  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>

<body id="body" class="<%= @body_class || 'home-classic'%> boxed-menu">
  <div class="mobile-sticky-header-overlay"></div>

  <%= erb :'partials/top_bar' %>
  <%= erb :'partials/header' %>

  <div class="main-wrapper <%= @main_wrapper_class || 'home' %>">
    <% if @error_message %>
      <%= erb :'partials/error_message' %>
    <% end %>

    <%= yield %>

    <%= erb :'partials/footer' %>
  </div>

  <script src="/plugins/jquery/jquery.min.js"></script>
  <script src="/plugins/jquery/jquery-migrate-3.0.0.min.js"></script>
  <script src="/plugins/bootstrap/js/tether.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
  <script src="/plugins/bootstrap/js/bootstrap.min.js"></script>
  <script src="/plugins/selectbox/jquery.selectbox-0.1.3.min.js"></script>
  <script src="/plugins/slick/slick.min.js"></script>
  <script src="/plugins/isotope/isotope.min.js"></script>
  <script src="/plugins/lazyload/lazyload.min.js"></script>
  <script src="/plugins/smoothscroll/SmoothScroll.js"></script>

  <script type="text/javascript">
    var urls = [
      '/plugins/animate.css',
      '/plugins/isotope/isotope.min.css',
      '/plugins/thin-line-icons/css/thin-line-icons.css',
      '/plugins/selectbox/select_option1.css',
      '/plugins/fancybox/fancyMorph.css',
      '/plugins/fancybox/jquery.fancybox.min.css',
      '/plugins/prismjs/prism.css',
      '/plugins/slick/slick-theme.css',
      '/plugins/slick/slick.css',
      '/plugins/selectbox/select_option1.css',
      '/plugins/font-awesome/css/font-awesome.min.css',
      '/plugins/bootstrap/css/bootstrap.min.css'
    ];
    var l = urls.length;
    var firstLink = document.getElementsByTagName('link')[0];

    for (var i = 0; i < l; i++) {
      var link = document.createElement('link');
      link.rel = 'stylesheet';
      link.href = urls[i];
      link.type = 'text/css';
      firstLink.parentNode.insertBefore(link, firstLink);
    }
  </script>

  <%= yield_content :javascript %>
</body>
</html>

