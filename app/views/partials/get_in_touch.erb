<section class="home-form bg-navy" id="quote">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-lg-8">
        <h2>Entre em contato</h2>
        <form class="row">
          <div class="form-group col-md-6">
            <input type="text" class="form-control" id="exampleInputName" aria-describedby="userName" placeholder="Seu Nome">
          </div>
          <div class="form-group col-md-6">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email">
          </div>
          <div class="form-group col-md-6">
            <input type="text" class="form-control" id="exampleInputPhone" aria-describedby="userPhone" placeholder="Telefone">
          </div>
          <div class="form-group col-md-6 selectOptions">
            <select name="topic" class="form-control select-drop">
              <option>Quero contratar um serviço</option>
              <option>Tenho uma dúvida</option>
              <option>Tenho uma reclamação</option>
            </select>
          </div>
          <div class="form-group col-sm-12">
            <textarea class="form-control" name="message" id="message" rows="5"></textarea>
          </div>
          <div class="col-md-6">
            <button type="submit" class="btn btn-default btn-primary">Enviar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
